{% extends 'base.html.twig' %}

{% block title %}Registrarse
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/registro.css') }}">
{% endblock %}

{% block body %}
	<main class="registro-wrapper">
		<h1 class="registro-titulo">Registrarse</h1>

		<div class="formulario-registro">
			<h2>Crea tu cuenta</h2>

			<div>
				{% for label, mensajes in app.flashes %}
					{% for mensaje in mensajes %}
						<div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
							{{ mensaje }}
						</div>
					{% endfor %}
				{% endfor %}
			</div>
			<form method="post">
				<div class="campo">
					<label for="nombreUsuario">Nombre de usuario</label>
					<input type="text" id="nombreUsuario" name="nombreUsuario" placeholder="Elige un nombre de usuario">
				</div>

				<div class="campo">
					<label for="email">Correo Electrónico</label>
					<input type="email" id="email" name="email" placeholder="Ingresa tu correo electrónico">
				</div>

				<div class="campo">
					<label for="password">Contraseña</label>
					<input type="password" id="password" name="password" placeholder="Crea una contraseña segura">
					<small>La contraseña debe tener al menos 8 caracteres, incluir números, letras y al menos una mayúscula.</small>
				</div>

				<div class="campo">
					<label for="confirmPassword">Confirmar Contraseña</label>
					<input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirma tu contraseña">
				</div>

				<div class="form-check">
					<input class="form-check-input" type="checkbox" id="aceptoTerminos" name="aceptoTerminos" value="1" required>
					<label class="form-check-label" for="aceptoTerminos">
						Acepto las
						<a href="#modalNormas" class="btn-normas">Normas de la comunidad</a>
						{% include 'security/normas.html.twig' %}
					</label>
				</div>
				<div class="acciones">
					<button type="submit">Enviar</button>
					<a href="{{ path('app_pagina_principal') }}">Cancelar</a>
				</div>
			</form>
		</div>
	</main>
{% endblock %}
